<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="basic_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="basic_icon">
        <item name="android:tint">@color/main_text_color</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="basic_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/small_padding</item>
        <item name="android:paddingRight">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
    </style>

    <style name="button_colored" parent="basic_button">
        <item name="android:background">@drawable/button_colored_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingRight">@dimen/large_padding</item>
        <item name="android:paddingStart">@dimen/large_padding</item>
        <item name="android:paddingEnd">@dimen/large_padding</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- icon style -->
    <style name="new_entity_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/main_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/large_padding</item>
        <item name="android:layout_marginEnd">@dimen/large_padding</item>
    </style>

    <style name="new_entity_edit_text">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="recycler_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:gravity">start</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:layout_marginEnd">@dimen/large_padding</item>
    </style>

    <style name="recycler_item_icon" parent="basic_icon">
        <item name="android:layout_height">30dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/small_padding</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="recycler_item_small_icon" parent="recycler_item_icon">
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="recycler_item_filter_dialog_button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/large_padding</item>
        <item name="android:paddingEnd">@dimen/large_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/filter_button_background</item>
        <item name="android:minHeight">@dimen/btn_recycler_view_min_height</item>
    </style>

    <style name="button_options" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/large_padding</item>
        <item name="android:paddingEnd">@dimen/large_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="dialog_title" parent="basic_text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
