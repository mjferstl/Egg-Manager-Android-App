<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linLay_recycler_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/small_padding"
    android:layout_marginEnd="@dimen/small_padding">

    <Button
        android:id="@+id/txtv_recycler_item_filter_dialog_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/basic_text"
        android:textAllCaps="false"
        android:gravity="start"
        android:textColor="@color/main_text_color"
        android:textStyle="normal"
        android:background="@drawable/recycler_item_top_background"
        android:paddingTop="@dimen/big_padding"
        android:paddingBottom="@dimen/big_padding"
        android:text="year">
    </Button>

    <Button
        android:textAllCaps="false"
        android:gravity="start"
        android:id="@+id/txtv_recycler_item_filter_dialog_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/basic_text"
        android:textColor="@color/main_text_color"
        android:textStyle="normal"
        android:background="@drawable/recycler_item_bottom_background"
        android:text="month">
    </Button>

</LinearLayout>