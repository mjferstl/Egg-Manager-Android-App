<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/LARGE_padding"
    android:layout_marginEnd="@dimen/LARGE_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtv_recycler_item_missing_date"
        style="@style/basic_text"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgv_recycler_item_missing_date"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/imgv_recycler_item_missing_date"
        style="@style/basic_icon"
        android:src="@drawable/ic_add_white_24dp"
        android:tint="@color/main_text_color"
        android:paddingStart="@dimen/large_padding"
        android:paddingEnd="@dimen/large_padding"
        android:contentDescription="@string/content_description_button_add"
        app:layout_constraintTop_toTopOf="@+id/txtv_recycler_item_missing_date"
        app:layout_constraintStart_toEndOf="@+id/txtv_recycler_item_missing_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_recycler_item_missing_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>