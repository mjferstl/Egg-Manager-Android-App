<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/large_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.DataCompletenessCheckActivity"
    tools:showIn="@layout/activity_data_completeness_check">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/large_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/basic_text"
            android:text="@string/from"/>

        <TextView
            android:id="@+id/txtv_data_check_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/basic_text"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/basic_text"
            android:text="@string/to"/>

        <TextView
            android:id="@+id/txtv_data_check_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/basic_text"
            android:textStyle="bold"
            android:text=""/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_data_completeness_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recyclerview_item_completeness_check">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>