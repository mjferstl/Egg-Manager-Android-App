<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/large_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.DataCompletenessCheckActivity"
    tools:showIn="@layout/activity_data_completeness_check">

    <TextView
        android:id="@+id/txtv_data_check_from"
        style="@style/basic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/huge_padding"
        android:text="@string/from"
        app:layout_constraintBottom_toTopOf="@+id/txtv_data_check_to"
        app:layout_constraintEnd_toStartOf="@+id/linLay_data_check_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linLay_data_check_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/LARGE_padding"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_data_check_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtv_data_check_from"
        app:layout_constraintTop_toTopOf="@+id/txtv_data_check_from">

        <ImageView
            style="@style/basic_icon"
            android:contentDescription="@string/content_description_icon_calendar"
            android:src="@drawable/ic_date_range_black_24dp" />

        <TextView
            android:id="@+id/txtv_data_check_start_date"
            style="@style/basic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtv_data_check_to"
        style="@style/basic_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/to"
        app:layout_constraintBottom_toTopOf="@+id/recv_data_completeness_check"
        app:layout_constraintEnd_toEndOf="@+id/txtv_data_check_from"
        app:layout_constraintStart_toStartOf="@+id/txtv_data_check_from"
        app:layout_constraintTop_toBottomOf="@+id/txtv_data_check_from" />

    <LinearLayout
        android:id="@+id/linLay_data_check_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/txtv_data_check_to"
        app:layout_constraintEnd_toEndOf="@+id/linLay_data_check_from"
        app:layout_constraintStart_toStartOf="@+id/linLay_data_check_from"
        app:layout_constraintTop_toTopOf="@+id/txtv_data_check_to">

        <ImageView
            style="@style/basic_icon"
            android:contentDescription="@string/content_description_icon_calendar"
            android:src="@drawable/ic_date_range_black_24dp" />

        <TextView
            android:id="@+id/txtv_data_check_end_date"
            style="@style/basic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_data_completeness_check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/large_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linLay_data_check_to"
        tools:listitem="@layout/recyclerview_item_completeness_check">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>