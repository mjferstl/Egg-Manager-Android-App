<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/large_padding"
    android:paddingEnd="@dimen/large_padding"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragments.ImportExportFragment"
    tools:showIn="@layout/activity_database_import_export"
    android:id="@+id/database_import_export_container">

    <LinearLayout
        android:id="@+id/linLay_export_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linLay_import_data">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_export_data"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingTop="@dimen/large_padding"
            android:paddingBottom="@dimen/small_padding"/>

        <TextView
            android:id="@+id/txtv_save_database_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/basic_text"
            android:text="@string/txt_save_database" />

        <Button
            android:id="@+id/btn_save_database"
            style="@style/button_colored"
            android:text="@string/btn_txt_export_data"
            android:layout_marginTop="@dimen/large_padding"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLay_import_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/huge_padding"
        app:layout_constraintTop_toBottomOf="@+id/linLay_export_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_txt_import_data"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingTop="@dimen/large_padding"
            android:paddingBottom="@dimen/small_padding"/>

        <TextView
            android:id="@+id/txtv_import_data_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/basic_text"
            android:text="@string/txt_import_data"/>

        <Spinner
            android:id="@+id/spinner_import_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_import_data"
            style="@style/button_colored"
            android:text="@string/btn_txt_import_data"
            android:layout_marginTop="@dimen/large_padding"
            android:layout_gravity="end"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>