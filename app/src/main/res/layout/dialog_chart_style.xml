<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/large_padding"
    android:layout_marginTop="@dimen/large_padding"
    android:layout_marginEnd="@dimen/large_padding"
    android:layout_marginBottom="@dimen/large_padding"
    android:orientation="vertical"
    android:paddingStart="@dimen/small_padding"
    android:paddingTop="@dimen/small_padding"
    android:paddingEnd="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding">

    <TextView
        android:id="@+id/txtv_chart_style_dialog_title"
        style="@style/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/HUGE_padding"
        android:paddingStart="@dimen/large_padding"
        android:paddingEnd="@dimen/HUGE_padding"
        android:text="@string/dialog_title_chart_style"
        app:layout_constraintBottom_toTopOf="@+id/lv_chart_styles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_chart_styles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_chart_style_dialog_title"
        tools:listitem="@layout/list_item_chart_style" />

</LinearLayout>