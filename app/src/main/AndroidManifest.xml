<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mfdevelopement.eggmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_eggmanager"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.FilterActivity"
            android:label="@string/title_activity_filter"
            android:parentActivityName=".activities.MainNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.MainNavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.ChartFragment"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".fragments.DatabaseBackupFragment"
            android:label="@string/title_activity_database_import_export"
            android:parentActivityName=".fragments.DatabaseFragment"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.eggmanager.fragments.DatabaseFragment" />
        </activity>
        <activity
            android:name=".fragments.AboutFragment"
            android:label="@string/title_activity_about"
            android:parentActivityName=".fragments.DatabaseFragment"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.eggmanager.fragments.DatabaseFragment" />
        </activity> <!-- ignore warnings -->
        <activity
            android:name=".activities.NewEntityActivity"
            android:label="@string/title_activity_new_entity"
            android:parentActivityName=".fragments.DatabaseFragment"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.eggmanager.fragments.DatabaseFragment" />
        </activity>
        <activity
            android:name=".fragments.DatabaseFragment"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>